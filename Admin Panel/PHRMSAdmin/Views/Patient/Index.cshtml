@model IPagedList<PHRMSAdmin.Models.PatientModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="normalheader transition animated fadeIn small-header" style="text-align:center">
    <div class="hpanel hgreen">
        <div class="panel-body">

            <h3 class="font-light m-b-xs" id="tipHeader">
                <i class="fa icon-dashboard text-danger"></i>MyHealthRecord User List
            </h3>
            <div id="hbreadcrumb" class="pull-right">
            </div>
            <h7 id="healthTipCtrl" style="color:#B76215;"></h7>
        </div>
    </div>
</div>


<div id="page-wrapper">
    <div id="page-inner">

        <!-- /. ROW  -->

        <div class="row">
            <div class="col-md-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">


                    <div class="panel-body">

                        @using (Ajax.BeginForm("Index", "Demo", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "ManageGrid" }, new { @class = "form-inline value_search" }))
                        {

                            <div class="search_div">
                                @*<span>User</span>*@
                                @*<input type="hidden" name="Page" value="@Model.PageNumber" />*@
                                <input type="text" name="Keyword" class="form-control" value="" placeholder="Search" />
                                <button class="btn btn-orange" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        }

                        @Html.Partial("_PatientGrid", Model)

                    </div>


                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>