@model PHRMSAdmin.Models.PatientModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="normalheader transition animated fadeIn small-header" style="text-align:center">
    <div class="hpanel hgreen">
        <div class="panel-body">

            <h3 class="font-light m-b-xs" id="tipHeader">
                <i class="fa icon-dashboard text-danger"></i> MyHealth Record User Details
            </h3>
            <div id="hbreadcrumb" class="pull-right">
            </div>
            <h7 id="healthTipCtrl" style="color:#B76215;"></h7>
        </div>
    </div>
</div>

<div id="page-wrapper">

    <div id="page-inner">
     
        <!-- /. ROW  -->
        <div class="row">
            <div class="col-lg-12">

                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstName)
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="form-group">
                                    @Model.FirstName
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName)
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="form-group">
                                    @Model.LastName
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email)
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="form-group">
                                    @Model.Email
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MobileNo)
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <div class="form-group">
                                    @Html.Raw(@Model.MobileNo)
                                </div>
                            </div>
                        </div>

                        <!-- /.col-lg-12 -->
                        <!-- /.row (nested) -->
                    </div>

                    <!-- /.panel-body -->
                    <div class="panel-footer">

                        <a href="@Request.ApplicationPath.TrimEnd('/') /Patient/Index" class="btn btn-primary">Back</a>
                    </div>

                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>


</div>
