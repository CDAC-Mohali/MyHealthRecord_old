@model PHRMSAdmin.Models.DocPatientDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="normalheader transition animated fadeIn small-header" style="text-align:center">
    <div class="hpanel hgreen">
        <div class="panel-body">

            <h3 class="font-light m-b-xs" id="tipHeader">
                <i class="fa icon-dashboard text-danger"></i> Patient Details
            </h3>
            <div id="hbreadcrumb" class="pull-right">
            </div>
            <h7 id="healthTipCtrl" style="color:#B76215;"></h7>
        </div>
    </div>
</div>
<div id="page-wrapper">

    <div id="page-inner">


        <!-- /. ROW  -->
        <div class="row">
            <div class="col-lg-12">

                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FirstName, "Name of Patient")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.FirstName
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName, "Surname")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.LastName
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DOB, "DOB")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.DOB
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Gender, "Gender")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.Gender
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PhoneNumber, "Mobile")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.PhoneNumber
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.EmailAddress, "Email Address")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.EmailAddress
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address1, "Address Line1")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.Address1
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address2, "Address Line2")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.Address2
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.City_Vill_Town, "Town/City")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.City_Vill_Town
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.District, "District")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.District
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.strState, "State")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.strState
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AadhaarNumber, "Aadhaar Number")
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    @Model.AadhaarNumber
                                </div>
                            </div>
                        </div>



                        <!-- /.col-lg-12 -->
                        <!-- /.row (nested) -->
                    </div>

                    <!-- /.panel-body -->
                    <div class="panel-footer">

                        <a href="@Request.ApplicationPath.TrimEnd('/') /PatientDoctor/Index" class="btn btn-primary">Back</a>
                    </div>

                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>


</div>
