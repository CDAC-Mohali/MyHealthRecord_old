@{
    ViewBag.Title = "_UserGrid";
}
@using PagedList.Mvc;
@using PagedList;

@model  IPagedList<PHRMSAdmin.Models.MedicalCollegesViewModel>
<div id="ManageGrid">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr style="background-color: #cacaca;">

                    <th>Hospital Name</th>
                    <th>State</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>


                        <td>
                            @Html.DisplayFor(modelItem => item.MedicalCollegeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                       
                        <td>
                            <a href="@Request.ApplicationPath.TrimEnd('/')/MedicalColleges/GetMedicalColleges/@item.MedicalCollegeId" class="text-primary">
                                <i class="fa fa-eye"></i>

                            </a> &nbsp;
                            <a href="@Request.ApplicationPath.TrimEnd('/')/MedicalColleges/UpdateMedicalCollges/@item.MedicalCollegeId" class="text-primary">
                                <i class="fa fa-edit "></i>
                            </a>
                            &nbsp;
                            <a href="#" class="text-danger" data-toggle="modal" onclick="SetMessageDialog('Delete Hospital','@Request.ApplicationPath.TrimEnd('/')/MedicalColleges/DeleteMedicalCollges',@item.MedicalCollegeId,'Do You want To delete ?')"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @Html.Partial("_GridPaging", Model)

    </div>
    @Html.Partial("_MessageDialog", Model.PageNumber)
</div>