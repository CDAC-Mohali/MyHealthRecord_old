<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:id="@+id/lv_weightcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_padding"
    android:background="@color/cardviewcolor"
    app:cardCornerRadius="@dimen/card_padding_corner">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txtactWTcollectionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="18/03/2013 04:07:29 PM"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            autofit:minTextSize="@dimen/minTextSize" />

        <LinearLayout
            android:id="@+id/lvactWT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtactWTcollectionDate"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtactWTwellnessWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".33"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Weight(kg)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtactWTwellnessHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".33"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Height(cm)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtactWTwellnessBMI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".33"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="BMI"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lvactWTvalues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvactWT"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtactWTwellnessWeightValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".33"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="WValue"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtactWTwellnessHeightValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".33"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="HValue"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/txtactWTwellnessBMIValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".33"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="BValue"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>


    

