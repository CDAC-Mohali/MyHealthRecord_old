<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:id="@+id/lv_problemscard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_padding"
    android:background="@color/cardviewcolor"
    app:cardCornerRadius="@dimen/card_padding_corner">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:id="@+id/listUsersTypePrb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvfontUserPrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_user"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/defaulttextcolor" />


            <TextView
                android:id="@+id/tvfontDoctorPrb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_user_md"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/text_info" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtprblmstrCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="18/03/2013 04:07:29 PM"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/lvprblmname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtprblmstrCreatedDate"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtprblmname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="Problems Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal"
                autofit:minTextSize="8sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@color/grey" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtprblmstillhaveproblems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lvprblmname"
            android:paddingTop="@dimen/padding_large"
            android:text="Still Have problems: "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtprblmstillhaveproblems_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtprblmstillhaveproblems"
            android:layout_below="@+id/lvprblmname"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_toRightOf="@+id/txtprblmstillhaveproblems"
            android:text="Value"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="normal" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


