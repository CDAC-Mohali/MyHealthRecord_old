

@{
    ViewBag.Title = "__LoginOTPInitial";
}



<div id="DivSendOTPLogin">

    <div class="form-group col-lg-12">
        <label>Registered Mobile No</label>
        <span class="text-danger"> *</span>
        @Html.TextBox("UserName", null, new { @class = "form-control", @placeholder = "Mobile No", @maxlength = "10" })
     
    </div>
    <div class="col-lg-12">
        <input type="button" id="SendOTP" class="btn btn-success" value="Next" />
        <a class="btn btn-default" href="@Url.Action("Login")">Cancel</a>
    </div>


</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





