<link href="~/vendor/sweetalert/lib/sweet-alert.css" rel="stylesheet" />
<script src="~/vendor/sweetalert/lib/sweet-alert.min.js"></script>
<script type="text/javascript">
    var ROOT = "@Url.Content("~/")";
    $(document).on('submit', "form", function () {
        //debugger
        var file;
        if ($(this).valid()) {
            var frmId = $(this).attr("id");
            var popuptitle = "Success!";
            var popuptype = "success";
            var popupmsg = "Password Reset Successful!";
            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (result) {
                    //alert(status.status);
                    //alert(result.view);
                    if (result.status > 0) {
                        //alert($("#" + frmId).parent().parent().parent().attr("class"));
                        $("#" + frmId).parent().html(result.view);
                        if (frmId == "frmInitVerification") {
                            popuptitle = "Sent!";
                           popupmsg = "OTP has been sent on your registered Phone or Email-Id.";
                        }
                        else if (frmId == "frmVerifyOTP") {
                            popuptitle = "Verified!";
                            popupmsg = "OTP verified. You can now reset your password!";
                        }
                    }
                    else if (result.status == -1) {
                        popuptitle = "Oops!";
                        popupmsg = "OTP mismatch. Please try again!";
                        popuptype = "error";
                    }
                    else {
                        popuptitle = "Oops!";
                        popupmsg = "Something went wrong! Please try again.";
                        popuptype = "error";
                    }
                    swal({
                        title: popuptitle,
                        text: popupmsg,
                        type: popuptype
                    },
                    function () {
                        if (frmId == "frmResetPwd" && result.status > 0) {
                            window.location = ROOT + 'Home/Index';
                        }
                        else
                            return;
                    });
                },
                error: function () {
                    swal({
                        title: "Oops!",
                        text: "Something went wrong! Please try again.",
                        type: "error"
                    });
                }
            });
        }
        return false;
    });

