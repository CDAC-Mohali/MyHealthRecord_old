                <div class="baseline">
                    <div class="row">
                        <div class="col-md-4" style="padding:10px;margin: auto;">
                            &nbsp;
                        </div>
                        <br>
                        <div class="col-md-6 col-sm-10 mblcntr">
                            <h2 class="bluetxt login-header"></h2>
                            <h2 class="bluetxt login-header"></h2>
                            <div class="login-width70 shadow gray">
                                <div class="row">
                                    <div class="col-md-12">
                                        <p class="black top10 bot5"><strong>Sign In to your account</strong></p>
                                    </div>
                                </div>

                                @*@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "frmLogin" }))
                                    {*@
                                <form action="/Home/Login" id="frmLogin" method="post" >

                                    @Html.AntiForgeryToken()
                                    @Html.ValidationMessage("CustomValidation")
                                    <div style="clear: both;"></div>
                                    <p></p>

                                    <div class="row gap">
                                        <div class="col-md-12 col-sm-12">
                                            <div class="col-md-3 col-sm-3 left20"><strong>Username</strong></div>
                                            <div class="col-md-9 col-sm-9 right5">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control flat", @id = "UserName", @name = "fakeusername", @placeholder = "Email or Mobile No.", @autocomplete = "off", @autocorrect = "off", @tabindex = "1" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row gap">
                                        <div class="col-md-12 col-sm-12">
                                            <div class="col-md-3 col-sm-3 left20"><strong>Password</strong></div>
                                            <div class="col-md-9 col-sm-9 right5">
                                                @Html.TextBoxFor(m => m.Password, new { @style = "-webkit-text-security: disc !important;", @class = "form-control flat", @id = "Password", @placeholder = "Type your password", @autocomplete = "off", @autocorrect = "off", @tabindex = "2", @autocapitalize = "off" })
                                                @Html.PasswordFor(m => m.Password, new { @id = "hdnPassword", @style = "display:none;" })
                                            </div>
                                        </div>
                                    </div>
                                    @if (ViewBag.LoginFailure >= 3)
                                    {
                                        <div class="row gap">
                                            <div class="col-md-12 col-sm-12">

                                                <div class="col-md-12 col-sm-12 right5">
                                                    <div class="g-recaptcha" data-sitekey=""></div>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="row gap">
                                        <div class="col-md-12 col-sm-12">
                                            <div class="col-md-3 col-sm-3"></div>
                                            <div class="col-md-5 col-sm-5 ">
                                                <input type="button" id="dummy" class="btn btn-success btn-xs" value="Sign In" tabindex="4" original-title="" onclick="">

                                                @*<input type="submit" id="submit" class="btn btn-success btn-xs" value="Sign In" tabindex="4" original-title="" style="display:none;">*@

                                            </div>



                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="col-md-3 col-sm-3"></div>
                                            <div class="col-md-5 col-sm-5 ">
                                                <div style="padding-top:5px;">
                                                    <a class="txtwarning font12" href="@Url.Action("ForgotPassword")">
                                                        Forgot password ?
                                                    </a>

                                                </div>

                                            </div>

                                            <div class="col-md-4 col-sm-4 ">
                                                <div style="padding-top:5px;">
                                                    <a class="txtwarning font12" href="@Url.Action("LoginOTP")">
                                                        Login By OTP
                                                    </a>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
