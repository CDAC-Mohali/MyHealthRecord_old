@model PHRMS.ViewModels.ForgotPasswordModel
@using (Html.BeginForm("LoginOTP", "Home", FormMethod.Post, new { id = "frmotpVerification" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group col-lg-12">
        <label>Registered Mobile No.</label>
        <span class="text-danger"> *</span>
        @Html.TextBoxFor(m => m.OTPMobileNo, new { @class = "form-control", @placeholder = "", @pattern = "[0-9]" })
        @Html.ValidationMessageFor(m => m.OTPMobileNo)
    </div>
    <div class="col-lg-12">
        <input type="submit" class="btn btn-success" value="Next" />
        <a class="btn btn-default" href="@Url.Action("Index")">Cancel</a>
    </div>
}