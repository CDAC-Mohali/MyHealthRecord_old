@model List<PHRMS.ViewModels.AllergyViewModel>
<div class="gj-grid-wrapper">
    <table id="grid" class="footable table table-bordered table-hover gj-grid-table" data-source="/Allergies/GetAllergiesGridList">
        <thead>
            <tr>
                <th class="gj-grid-bootstrap-thead-cell" style="width: 200px;text-align: left;">
                    <div style="float: left">Allergy Name</div>
                </th>
                <th class="gj-grid-bootstrap-thead-cell" style="width: 200px; text-align: left;">
                    <div style="float: left">Still Have Allergy?</div>
                </th>
                <th class="gj-grid-bootstrap-thead-cell" style="width: 34px; text-align: left;">

                    <div style="float: left">From</div>
                </th>
                <th class="gj-grid-bootstrap-thead-cell" style="width: 34px; text-align: left;">
                    <div style="float: left">Severity</div>
                </th>
                <th class="gj-grid-bootstrap-thead-cell" style="width: 34px; text-align: left;">
                    <div style="float: left">Notes</div>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model)
            {
                <tr class="">
                    <td style="text-align: left;"><div data-role="display" title="Activities involving springboard and platform diving">@Item.AllergyName</div></td>
                    <td style="text-align: left;"><div data-role="display">@Item.strStill_Have</div></td>
                    <td style="text-align: left;"><div data-role="display">@Item.strDuration</div></td>
                    <td style="text-align: left;"><div data-role="display">@Item.strSeverity</div></td>
                    <td style="text-align: left;"><div data-role="display">@Item.Comments</div></td>
                </tr>
            }

        </tbody>

    </table>
</div>