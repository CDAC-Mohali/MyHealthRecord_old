@{
    Layout = "_Layout";
    ViewBag.Title = "OpenEMR";
}
@model PHRMS.ViewModels.OpenEMRViewModel
<div class="normalheader transition animated fadeIn">
    <div class="hpanel hgreen">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><a href="@Url.Action("Dashboard", "Account")">Dashboard</a></li>
                    <li>
                        <span>OpenEMR-DEU</span>
                    </li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">
                OpenEMR Data Extraction Utility
            </h2>
            <div>
                <small>
                    This page makes it easy for you to extract your OpenEMR Data.<br /><br />
                    <span class="glyphicon glyphicon-user text-info"></span> - Entered by User &nbsp;&nbsp;<span class="glyphicon glyphicon-user text-primary"></span> - Entered by Doctor
                </small>
              
            </div>
        </div>
    </div>
</div>

<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel hyellow">
                <div class="panel-heading">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                        <a class="closebox"><i class="fa fa-times"></i></a>
                    </div>
                   Please extract your OpenEMR Data from here by selecting the States and Districts.
                </div>
                <div class="panel-body float-e-margins">
                    <br />
                    
                    <div class="form-group">                      
                        <label class="col-sm-4 control-label">State Choices<span class="text-danger"> *</span></label>
                        <div class="col-md-5">
                            @Html.DropDownListFor(m => m.oStatesOpenEMRViewModel.StateName, (IEnumerable<SelectListItem>)ViewBag.OpenEMRStatesList, new { @class = "form-control", @datacolumn = "StateName", @id = "txtStateName", @name = "StateName" })
                        </div>
                    </div><br/><br/>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">District Choices<span class="text-danger"> *</span></label>
                        <div class="col-md-5">
                            @Html.DropDownListFor(m => m.oDistrictsViewModel.DistrictName, (IEnumerable<SelectListItem>)ViewBag.DistrictListOnStateId, new { @class = "form-control", @datacolumn = "DistrictName", @id = "txtDistrictName", @name = "DistrictName" })
                        </div>
                    </div>
                   
                    <br/><br/><br />
                    <div class="table-responsive">
                        @Html.AntiForgeryToken()
                        <table id="grid" class="footable table table-bordered table-hover" ></table>
                    </div>
                    <br /><br />
                    <!-- Modal -->
                    <div class="modal fade" id="allergyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="color-line"></div>
                                <div class="modal-body">
                                    <form id="frmSaveAllergy" class="form-horizontal" style="display:none;">
                                        @Html.AntiForgeryToken()
                                    </form>
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" id="btnSave" class="btn btn-info">Next</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .custom-blue {
        color: blue;
    }
    .glyphicon-download {
        font-size:20px;
    }

</style>
<link href="~/vendor/toastr/build/toastr.min.css" rel="stylesheet" />
<link href="~/vendor/sweetalert/lib/sweet-alert.css" rel="stylesheet" />
