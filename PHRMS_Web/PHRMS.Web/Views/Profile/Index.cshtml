    function SaveFiles(file) {
        if (uploadOk == 1) {
            var xhr = new XMLHttpRequest();
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4) {
                    status = xhr.status;
                    data = JSON.parse(xhr.responseText);
                    if (status == 200) {
                        swal({
                            title: "Success!",
                            text: "Image Uploaded Successfully!",
