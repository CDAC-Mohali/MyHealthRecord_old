                        });
                        uploadOk = 0;
                        $("#txtFileName").val("");
                        //alert(xhr.responseText);
                    }
                    else {
                        swal({
                            title: "Oops!",
                            text: "Failed to upload image!",
                            type: "error"
                        });
                    }
                }
            }
            xhr.open("POST", ROOT + 'Profile/UploadFileRevised', true);
            xhr.setRequestHeader("X_FILENAME", file.files[0].name);
            xhr.setRequestHeader("X_FILETYPE", "2");
