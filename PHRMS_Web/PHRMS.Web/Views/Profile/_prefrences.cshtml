@model PHRMS.ViewModels.PreferencesViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="form-horizontal" role="form" id="PreferencesInfo" style="@(Model.UserId.Equals(Guid.Empty)?"display:none;":"")">

            <div class="form-group">
                @Html.LabelFor(m => m.Pref_Hosp, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    <p class="form-control-static">@Html.DisplayFor(m => m.Pref_Hosp)</p>
                </div>
                @Html.LabelFor(m => m.Prim_Care_Prov, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    @*<span class="control-label col-sm-4" id="spEmail" style="text-align: left">abc@example.com</span>*@
                    <p class="form-control-static">@Html.DisplayFor(m => m.Prim_Care_Prov)</p>
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Special_Needs, new { @class = "col-lg-2 control-label" })
                @*<label class="control-label col-lg-2" for="Email">Email Address:</label>*@
                <div class="col-lg-10">
                    @*<span class="control-label col-sm-4" id="spEmail" style="text-align: left">abc@example.com</span>*@
                    <p class="form-control-static"> @Html.DisplayFor(m => m.Special_Needs)</p>
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="button" class="btn btn-outline btn-primary edit">Edit</button>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("SavePreferencesInformation", "Profile", FormMethod.Post, new { @id = "frmPreferencesInfo", @class = "form-horizontal", @style = (Model.UserId.Equals(Guid.Empty) ? "" : "display:none;") }))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.Pref_Hosp, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.Pref_Hosp, new { @class = "form-control", @onchange = "CheckHtmlTag(this)" })
                    @*@Html.DropDownListFor(m => m.Pref_Hosp, (IEnumerable<SelectListItem>)ViewBag.PreferredHospitalList, new { @class = "form-control" })*@
                    @*@Html.ValidationMessageFor(m => m.Pref_Hosp)*@
                </div>
                @Html.LabelFor(m => m.Prim_Care_Prov, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-5">
                    @Html.TextAreaFor(m => m.Prim_Care_Prov, new { @class = "form-control", @onchange = "CheckHtmlTag(this)" })
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Special_Needs, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Special_Needs, new { @class = "form-control", @onchange = "CheckHtmlTag(this)" })
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-default cancel">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>