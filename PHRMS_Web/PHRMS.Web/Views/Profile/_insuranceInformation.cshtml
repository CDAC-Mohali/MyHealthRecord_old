@model PHRMS.ViewModels.InsuranceViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="form-horizontal" role="form" id="InsuranceInfo" style="@(Model.UserId.Equals(Guid.Empty)?"display:none;":"")">

            <div class="form-group">
                @Html.LabelFor(m => m.Insu_Org_Name, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    <p class="form-control-static">@Html.DisplayFor(m => m.Insu_Org_Name)</p>
                </div>
                @Html.LabelFor(m => m.Insu_Org_Phone, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    @*<span class="control-label col-sm-4" id="spEmail" style="text-align: left">abc@example.com</span>*@
                    <p class="form-control-static">@Html.DisplayFor(m => m.Insu_Org_Phone)</p>
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Insu_Org_Grp_Num, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    <p class="form-control-static"> @Html.DisplayFor(m => m.Insu_Org_Grp_Num)</p>
                </div>
                @Html.LabelFor(m => m.ValidTill, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-4">
                    <p class="form-control-static">@Html.DisplayFor(m => m.strValidTill)</p>
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="button" class="btn btn-outline btn-primary edit">Edit</button>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("SaveInsuranceInformation", "Profile", FormMethod.Post, new { @id = "frmInsuranceInfo", @class = "form-horizontal", @style = (Model.UserId.Equals(Guid.Empty) ? "" : "display:none;") }))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.Insu_Org_Name, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Insu_Org_Name, new { @class = "form-control", @onchange = "CheckHtmlTag(this)" })
                    @Html.ValidationMessageFor(m => m.Insu_Org_Name)
                </div>
                @Html.LabelFor(m => m.Insu_Org_Phone, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Insu_Org_Phone, new { @class = "form-control", @maxlength = 40, @onchange = "CheckHtmlTag(this)" })
                    @Html.ValidationMessageFor(m => m.Insu_Org_Phone)
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Insu_Org_Grp_Num, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Insu_Org_Grp_Num, new { @class = "form-control", @onchange = "CheckHtmlTag(this)" })
                </div>
                @Html.LabelFor(m => m.ValidTill, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.strValidTill, new { @class = "form-control idatepicker", @onchange = "CheckHtmlTag(this)" })
                </div>
            </div>
            <div class="hr-line-dashed-Custom"></div>
            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <button type="submit" id="btnSubmit" class="btn btn-primary">Save</button>
                    <button type="button" id="btnCancel" class="btn btn-default cancel">Cancel</button>
                </div>
            </div>
        }
    </div>
</div>