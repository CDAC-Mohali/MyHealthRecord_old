        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <div class="hpanel">
                        <div class="panel-body text-center h-200" data-pin-hover="true">
                            <i class="ionicons ion-android-walk fa-4x " style="color:cornflowerblue"></i>

                            <h1 class="m-xs" id="ActivitiesDistance">0 KM</h1>

                            <h3 class="font-bold no-margins text-success" size="10px">
                                Activities 
                            </h3>
                          
                         
                            <small>
                                <span class="pull-centre" id="LastActivityType">You have no record yet. Please add activity</span>
                            </small>
                            <div></div>
                            <small>
                                <span class="pull-centre" id="LastActivityDistance"></span>
                            </small>
                            <small>
                                <span class="pull-centre" id="LastActivityCollectionDate"></span>
                            </small>
                        </div>
                        <div class="panel-footer">
                            <a style="color:#62CB31;" href="@Url.Content("~/")Wellness/activity">View More Details</a>
                            @*<a href="@Url.Content("~/")Wellness/activity " align ="right"><span class="glyphicon glyphicon-plus text-success "></span></a>*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hpanel stats">
                        <div class="panel-body h-200">
                            <div class="stats-title pull-left">
                                <h4>Allergies</h4>
                            </div>
