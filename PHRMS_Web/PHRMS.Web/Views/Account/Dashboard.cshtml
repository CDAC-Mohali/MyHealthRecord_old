        <div class="col-lg-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Body Mass Index
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        @*<div class="col-md-2">
                        </div>*@

                        <div class="col-md-12">
                            <div class="activity-chart-container">
                                <svg class="activity-chart"></svg>
