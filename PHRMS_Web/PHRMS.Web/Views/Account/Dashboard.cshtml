                                <span class="font-bold no-margins" id="AllergyFirst">
                                    You have No Allergies. Please add Allergies.
                                </span>
                                <br />
                                <small>
                                    <span class="pull-left" id="SeverityFirst"></span>
                                </small>
                               
                                <span class="font-bold no-margins" id="AllergySecond">

                                </span>
                                
                                <small>
                                    <br /><span class="pull-left" id="SeveritySecond"></span>
                                </small>
                                <small>
                                    <span class="pull-left" id="LastAllergyAddedOn"></span>
                                </small>
                                
                            </div>
                        </div>
                        <div class="panel-footer">
                            <a style="color:#62CB31;" href="@Url.Content("~/")Allergies">View More Details</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="hpanel">
                        <div class="panel-body text-center h-200">
                            <i class="ion-arrow-graph-up-right fa-3x " style="color:chocolate"></i>

                            <h1 class="m-xs" id="GlucoseLatest">0 mg/dl</h1>

                            <h3 class="font-bold no-margins text-success">
                                Blood Glucose
                            </h3>
                            @*<small>Latest Glucose</small>*@
                         
                            <small>
                                <span class="pull-centre" id="LastGlucoseCollectionDate">You have no record yet. Please add blood Pressure record.</span>
                            </small>
                        </div>
                        <div class="panel-footer">
                            <a style="color:#62CB31;" href="@Url.Content("~/")Wellness/glucose">View More Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hpanel">
                        <div class="panel-body text-center h-200">
                           
                            <i class="fa fa-heart fa-4x text-danger"></i>

                            <h2 class="m-xs" id="BPLatest">0/0 mmHg</h2>

                            <h3 class="font-bold no-margins text-success">
                                Blood Pressure
                            </h3>
                           @* <small>Latest Blood Pressure</small>*@
                            <br />
                            <small>
                                <span class="pull-centre" id="LastBpCollectionDate">You have no record yet. Please add blood Pressure record.</span>
                            </small>
                        </div>
                        <div class="panel-footer">
                            <a style="color:#62CB31;" href="@Url.Content("~/")Wellness/bloodpressure">View More Details</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>

        <div class="col-lg-6">

            <div class="panel panel-success">
                <div class="panel-heading">
                    Blood Pressure
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-10">
                            <div class="bp-chart-container">
                            </div>
                        </div>

                    </div>


                </div>

            </div>

            <!-- /.panel-body -->
        </div>

    </div>

