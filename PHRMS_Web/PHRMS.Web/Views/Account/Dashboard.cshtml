@{
    Layout = "_Layout";
    ViewBag.Title = "Dashboard";
}
@using Microsoft.AspNet.Http
<div class="normalheader transition animated fadeIn" style="text-align:center">
    <div class="hpanel hgreen">
        <div class="panel-body">
            <a class="small-header-action" href="">
